# set PS1 for shell prompt
parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
export PS1="# \[\e[32m\]\u\[\e[34m\]@\h \[\e[91m\]\$(parse_git_branch)\[\e[32m\]\w\[\e[00m\]$ \n"

export LS_COLORS
LS_OPTIONS="--color=auto -C -B -T 0 "

#-------------------------------------------------------------------------------------------------
# ALIASES
#-------------------------------------------------------------------------------------------------
alias ls='ls $LS_OPTIONS'
alias cd..='cd ..'
alias cd...='cd ../..'
alias cls='clear'


alias gst='git st '
alias gstu='git st -uno '
